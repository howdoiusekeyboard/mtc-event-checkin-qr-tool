# MTC Event Check-In QR Tool - Development Environment
# This configuration is optimized for local development

# =============================================================================
# ENVIRONMENT
# =============================================================================
NODE_ENV=development

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_NAME=MTC Event Check-In QR Tool (Dev)
APP_VERSION=2.0.0-dev
DEFAULT_EVENT_NAME=MTC Development Event
ENABLE_ATTENDANCE_TRACKING=true
ENABLE_QR_GENERATION=true

# =============================================================================
# GOOGLE SHEETS INTEGRATION (Development)
# =============================================================================
# Replace with your development Google Apps Script URL
GOOGLE_APPS_SCRIPT_URL=https://script.google.com/macros/s/YOUR_DEV_SCRIPT_ID/exec
GOOGLE_SHEET_ID=your_dev_google_sheet_id_here
GOOGLE_SHEET_NAME=Attendance
GOOGLE_REQUEST_TIMEOUT=15000
GOOGLE_MAX_RETRIES=5

# =============================================================================
# UI/UX CONFIGURATION (Development)
# =============================================================================
SHOW_ATTENDANCE_MESSAGES=true
SHOW_ATTENDANCE_COUNTER=true
SHOW_DEBUG_INFO=true
AUTO_CLEAR_FORM=false
ENABLE_KEYBOARD_SHORTCUTS=true

# Development theme (slightly different for identification)
PRIMARY_COLOR=#0078D4
SECONDARY_COLOR=#106ebe
BACKGROUND_COLOR=#f5f7fa
CONTAINER_BACKGROUND=#ffffff
TEXT_COLOR=#333333

# =============================================================================
# SECURITY CONFIGURATION (Development - Relaxed)
# =============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:8000
ENABLE_CORS_VALIDATION=false
ENABLE_RATE_LIMITING=false
MAX_REQUESTS_PER_MINUTE=120

ENABLE_EMAIL_VALIDATION=true
ENABLE_NAME_VALIDATION=true
MIN_NAME_LENGTH=1
MAX_NAME_LENGTH=150
MAX_EMAIL_LENGTH=300

# =============================================================================
# LOGGING AND DEBUGGING (Development - Verbose)
# =============================================================================
ENABLE_CONSOLE_LOGGING=true
ENABLE_ERROR_LOGGING=true
ENABLE_ATTENDANCE_LOGGING=true
ENABLE_QR_LOGGING=true
LOG_LEVEL=debug

ENABLE_DEBUG_MODE=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ANALYTICS=false

# =============================================================================
# QR CODE CONFIGURATION (Development)
# =============================================================================
QR_CODE_SIZE=256
QR_CODE_COLOR_DARK=#000000
QR_CODE_COLOR_LIGHT=#ffffff
QR_CODE_CORRECTION_LEVEL=M
QR_CODE_MARGIN=4

QR_DATA_INCLUDE_TIMESTAMP=true
QR_DATA_INCLUDE_EVENT_NAME=true
QR_DATA_CUSTOM_FORMAT=Name: {name}\nEmail: {email}\nEvent: {event}\nTime: {timestamp}

# =============================================================================
# PERFORMANCE CONFIGURATION (Development)
# =============================================================================
ENABLE_BROWSER_CACHING=false
CACHE_DURATION=0
REQUEST_TIMEOUT=15000
RETRY_ATTEMPTS=5
RETRY_DELAY=2000

# =============================================================================
# FEATURE FLAGS (Development - All Enabled)
# =============================================================================
FEATURE_GOOGLE_SHEETS=true
FEATURE_EVENT_NAME_FIELD=true
FEATURE_BULK_CHECKIN=true
FEATURE_EXPORT_DATA=true
FEATURE_REAL_TIME_STATS=true
FEATURE_EMAIL_NOTIFICATIONS=false

# Experimental features (enabled in development)
EXPERIMENTAL_OFFLINE_MODE=true
EXPERIMENTAL_PWA_SUPPORT=true
EXPERIMENTAL_DARK_MODE=true
