# MTC Event Check-In QR Tool - Environment Variables Template
# Copy this file to .env and update with your actual values

# =============================================================================
# GOOGLE SHEETS INTEGRATION
# =============================================================================

# Google Apps Script Web App URL (REQUIRED for attendance tracking)
# Get this from your Google Apps Script deployment
GOOGLE_APPS_SCRIPT_URL=https://script.google.com/macros/s/YOUR_SCRIPT_ID_HERE/exec

# Google Sheet ID (REQUIRED for Google Apps Script)
# Extract from your Google Sheets URL: https://docs.google.com/spreadsheets/d/SHEET_ID/edit
GOOGLE_SHEET_ID=your_google_sheet_id_here

# Google Sheets Configuration
GOOGLE_SHEET_NAME=Attendance
GOOGLE_REQUEST_TIMEOUT=10000
GOOGLE_MAX_RETRIES=3

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application Environment (development, staging, production)
NODE_ENV=development

# Application Settings
APP_NAME=MTC Event Check-In QR Tool
APP_VERSION=2.0.0
APP_DESCRIPTION=Professional event check-in system with Google Sheets integration

# Default Event Configuration
DEFAULT_EVENT_NAME=MTC Event
ENABLE_ATTENDANCE_TRACKING=true
ENABLE_QR_GENERATION=true

# =============================================================================
# UI/UX CONFIGURATION
# =============================================================================

# UI Feature Toggles
SHOW_ATTENDANCE_MESSAGES=true
SHOW_ATTENDANCE_COUNTER=false
SHOW_DEBUG_INFO=false
AUTO_CLEAR_FORM=false
ENABLE_KEYBOARD_SHORTCUTS=true

# Theme and Styling
PRIMARY_COLOR=#0078D4
SECONDARY_COLOR=#106ebe
BACKGROUND_COLOR=#f0f2f5
CONTAINER_BACKGROUND=#ffffff
TEXT_COLOR=#333333

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,https://yourdomain.com
ENABLE_CORS_VALIDATION=false

# Rate Limiting
ENABLE_RATE_LIMITING=false
MAX_REQUESTS_PER_MINUTE=60

# Data Validation
ENABLE_EMAIL_VALIDATION=true
ENABLE_NAME_VALIDATION=true
MIN_NAME_LENGTH=2
MAX_NAME_LENGTH=100
MAX_EMAIL_LENGTH=254

# =============================================================================
# LOGGING AND DEBUGGING
# =============================================================================

# Logging Configuration
ENABLE_CONSOLE_LOGGING=true
ENABLE_ERROR_LOGGING=true
ENABLE_ATTENDANCE_LOGGING=true
ENABLE_QR_LOGGING=true
LOG_LEVEL=info

# Debug Settings
ENABLE_DEBUG_MODE=false
ENABLE_PERFORMANCE_MONITORING=false
ENABLE_ANALYTICS=false

# =============================================================================
# QR CODE CONFIGURATION
# =============================================================================

# QR Code Settings
QR_CODE_SIZE=256
QR_CODE_COLOR_DARK=#000000
QR_CODE_COLOR_LIGHT=#ffffff
QR_CODE_CORRECTION_LEVEL=M
QR_CODE_MARGIN=4

# QR Code Data Format
QR_DATA_INCLUDE_TIMESTAMP=false
QR_DATA_INCLUDE_EVENT_NAME=true
QR_DATA_CUSTOM_FORMAT=Name: {name}\nEmail: {email}

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Caching
ENABLE_BROWSER_CACHING=true
CACHE_DURATION=3600

# Network Settings
REQUEST_TIMEOUT=10000
RETRY_ATTEMPTS=3
RETRY_DELAY=1000

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature Toggles
FEATURE_GOOGLE_SHEETS=true
FEATURE_EVENT_NAME_FIELD=true
FEATURE_BULK_CHECKIN=false
FEATURE_EXPORT_DATA=false
FEATURE_REAL_TIME_STATS=false
FEATURE_EMAIL_NOTIFICATIONS=false

# Experimental Features
EXPERIMENTAL_OFFLINE_MODE=false
EXPERIMENTAL_PWA_SUPPORT=false
EXPERIMENTAL_DARK_MODE=false
