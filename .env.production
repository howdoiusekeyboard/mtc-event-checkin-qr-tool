# MTC Event Check-In QR Tool - Production Environment
# This configuration is optimized for production deployment

# =============================================================================
# ENVIRONMENT
# =============================================================================
NODE_ENV=production

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_NAME=MTC Event Check-In QR Tool
APP_VERSION=2.0.0
DEFAULT_EVENT_NAME=MTC Event
ENABLE_ATTENDANCE_TRACKING=true
ENABLE_QR_GENERATION=true

# =============================================================================
# GOOGLE SHEETS INTEGRATION (Production)
# =============================================================================
# Replace with your production Google Apps Script URL
GOOGLE_APPS_SCRIPT_URL=https://script.google.com/macros/s/YOUR_PROD_SCRIPT_ID/exec
GOOGLE_SHEET_ID=your_prod_google_sheet_id_here
GOOGLE_SHEET_NAME=Attendance
GOOGLE_REQUEST_TIMEOUT=10000
GOOGLE_MAX_RETRIES=3

# =============================================================================
# UI/UX CONFIGURATION (Production)
# =============================================================================
SHOW_ATTENDANCE_MESSAGES=true
SHOW_ATTENDANCE_COUNTER=false
SHOW_DEBUG_INFO=false
AUTO_CLEAR_FORM=false
ENABLE_KEYBOARD_SHORTCUTS=true

# Production theme
PRIMARY_COLOR=#0078D4
SECONDARY_COLOR=#106ebe
BACKGROUND_COLOR=#f0f2f5
CONTAINER_BACKGROUND=#ffffff
TEXT_COLOR=#333333

# =============================================================================
# SECURITY CONFIGURATION (Production - Strict)
# =============================================================================
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ENABLE_CORS_VALIDATION=true
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=30

ENABLE_EMAIL_VALIDATION=true
ENABLE_NAME_VALIDATION=true
MIN_NAME_LENGTH=2
MAX_NAME_LENGTH=100
MAX_EMAIL_LENGTH=254

# =============================================================================
# LOGGING AND DEBUGGING (Production - Minimal)
# =============================================================================
ENABLE_CONSOLE_LOGGING=false
ENABLE_ERROR_LOGGING=true
ENABLE_ATTENDANCE_LOGGING=false
ENABLE_QR_LOGGING=false
LOG_LEVEL=error

ENABLE_DEBUG_MODE=false
ENABLE_PERFORMANCE_MONITORING=false
ENABLE_ANALYTICS=true

# =============================================================================
# QR CODE CONFIGURATION (Production)
# =============================================================================
QR_CODE_SIZE=256
QR_CODE_COLOR_DARK=#000000
QR_CODE_COLOR_LIGHT=#ffffff
QR_CODE_CORRECTION_LEVEL=M
QR_CODE_MARGIN=4

QR_DATA_INCLUDE_TIMESTAMP=false
QR_DATA_INCLUDE_EVENT_NAME=true
QR_DATA_CUSTOM_FORMAT=Name: {name}\nEmail: {email}

# =============================================================================
# PERFORMANCE CONFIGURATION (Production - Optimized)
# =============================================================================
ENABLE_BROWSER_CACHING=true
CACHE_DURATION=86400
REQUEST_TIMEOUT=8000
RETRY_ATTEMPTS=2
RETRY_DELAY=1000

# =============================================================================
# FEATURE FLAGS (Production - Stable Features Only)
# =============================================================================
FEATURE_GOOGLE_SHEETS=true
FEATURE_EVENT_NAME_FIELD=true
FEATURE_BULK_CHECKIN=false
FEATURE_EXPORT_DATA=false
FEATURE_REAL_TIME_STATS=false
FEATURE_EMAIL_NOTIFICATIONS=false

# Experimental features (disabled in production)
EXPERIMENTAL_OFFLINE_MODE=false
EXPERIMENTAL_PWA_SUPPORT=false
EXPERIMENTAL_DARK_MODE=false
