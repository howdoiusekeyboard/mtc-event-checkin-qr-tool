# MTC Event Check-In QR Tool - Staging Environment
# This configuration is for testing before production deployment

# =============================================================================
# ENVIRONMENT
# =============================================================================
NODE_ENV=staging

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_NAME=MTC Event Check-In QR Tool (Staging)
APP_VERSION=2.0.0-staging
DEFAULT_EVENT_NAME=MTC Staging Event
ENABLE_ATTENDANCE_TRACKING=true
ENABLE_QR_GENERATION=true

# =============================================================================
# GOOGLE SHEETS INTEGRATION (Staging)
# =============================================================================
# Replace with your staging Google Apps Script URL
GOOGLE_APPS_SCRIPT_URL=https://script.google.com/macros/s/YOUR_STAGING_SCRIPT_ID/exec
GOOGLE_SHEET_ID=your_staging_google_sheet_id_here
GOOGLE_SHEET_NAME=Staging_Attendance
GOOGLE_REQUEST_TIMEOUT=12000
GOOGLE_MAX_RETRIES=4

# =============================================================================
# UI/UX CONFIGURATION (Staging)
# =============================================================================
SHOW_ATTENDANCE_MESSAGES=true
SHOW_ATTENDANCE_COUNTER=true
SHOW_DEBUG_INFO=true
AUTO_CLEAR_FORM=false
ENABLE_KEYBOARD_SHORTCUTS=true

# Staging theme (slightly different for identification)
PRIMARY_COLOR=#0078D4
SECONDARY_COLOR=#106ebe
BACKGROUND_COLOR=#f2f4f7
CONTAINER_BACKGROUND=#ffffff
TEXT_COLOR=#333333

# =============================================================================
# SECURITY CONFIGURATION (Staging - Moderate)
# =============================================================================
ALLOWED_ORIGINS=https://staging.yourdomain.com,https://test.yourdomain.com
ENABLE_CORS_VALIDATION=true
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=60

ENABLE_EMAIL_VALIDATION=true
ENABLE_NAME_VALIDATION=true
MIN_NAME_LENGTH=2
MAX_NAME_LENGTH=100
MAX_EMAIL_LENGTH=254

# =============================================================================
# LOGGING AND DEBUGGING (Staging - Moderate)
# =============================================================================
ENABLE_CONSOLE_LOGGING=true
ENABLE_ERROR_LOGGING=true
ENABLE_ATTENDANCE_LOGGING=true
ENABLE_QR_LOGGING=false
LOG_LEVEL=info

ENABLE_DEBUG_MODE=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ANALYTICS=false

# =============================================================================
# QR CODE CONFIGURATION (Staging)
# =============================================================================
QR_CODE_SIZE=256
QR_CODE_COLOR_DARK=#000000
QR_CODE_COLOR_LIGHT=#ffffff
QR_CODE_CORRECTION_LEVEL=M
QR_CODE_MARGIN=4

QR_DATA_INCLUDE_TIMESTAMP=true
QR_DATA_INCLUDE_EVENT_NAME=true
QR_DATA_CUSTOM_FORMAT=Name: {name}\nEmail: {email}\nEvent: {event}

# =============================================================================
# PERFORMANCE CONFIGURATION (Staging)
# =============================================================================
ENABLE_BROWSER_CACHING=true
CACHE_DURATION=3600
REQUEST_TIMEOUT=10000
RETRY_ATTEMPTS=3
RETRY_DELAY=1500

# =============================================================================
# FEATURE FLAGS (Staging - Testing New Features)
# =============================================================================
FEATURE_GOOGLE_SHEETS=true
FEATURE_EVENT_NAME_FIELD=true
FEATURE_BULK_CHECKIN=true
FEATURE_EXPORT_DATA=true
FEATURE_REAL_TIME_STATS=true
FEATURE_EMAIL_NOTIFICATIONS=false

# Experimental features (testing in staging)
EXPERIMENTAL_OFFLINE_MODE=false
EXPERIMENTAL_PWA_SUPPORT=true
EXPERIMENTAL_DARK_MODE=false
